<div class="container-fluid">

  <% if current_user %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">TrackMetrics</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="<%= registered_applications_path %>">MyApps <span class="sr-only">(current)</span></a></li>
          <li><a href="<%= new_registered_application_path %>">Add App</a></li>
        </ul>
      </div>
    </nav>
  <% end %>


  <% if current_user == nil %>
    <div class="jumbotron jumbotron-fluid jumbotron-landing-nil">
      <div class="container-fluid">
        <center><h1>TrackMetrics</h1></center>
        <center><h2>Track activity on the web.</h2></center>
      </div>
    </div>
  <% else %>
    <div class="jumbotron jumbotron-fluid jumbotron-landing">
      <div class="container-fluid">
        <center><h1>TrackMetrics</h1></center>
        <center><h2>Track activity on the web.</h2></center>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-4">
      <div class="thumbnail">
        <img src="assets/woman1.png" alt="woman eating salad">
        <div class="caption">
          <h3>Track your friends.</h3>
            <p>Julia buys hemorrhoid cream?</p>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="thumbnail">
        <img src="assets/woman2.png" alt="woman eating another salad">
        <div class="caption">
          <h3>Track your family.</h3>
            <p>Spoiler: they all watch kink porn.</p>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="thumbnail">
        <img src="assets/woman3.png" alt="last woman eating salad">
        <div class="caption">
          <h3>Track your co-workers.</h3>
            <p>Show 'em who's boss of their privacy.</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% if current_user == nil %>
      <center><h1><a href="<%= new_user_registration_path %>">Sign up </a>and start tracking today!</h1></center>
    <% end %>
  </div>

</div>
