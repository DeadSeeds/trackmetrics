<div class="container-fluid">

  <div class="row">
    <div class="col-md-11">
      <%= link_to "Add Application", new_registered_application_path, class: 'btn-group btn-success btn-sm' %>
    </div>
  </div>
  <div class="jumbotron">
    <center><h1>TrackMetrics</h1></center>
  </div>


  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">URL</th>
        <th scope="col">Unique ID</th>
      </tr>
    </thead>

    <% @apps.each_with_index do |app, index| %>
      <tr>
        <th scope="row"> <%= index + 1 %> </th>
        <td> <%= link_to app.name, registered_application_path(app.id) %> </td>
        <td> <%= link_to app.url, registered_application_path(app.id) %> </td>
        <td> <%= link_to app.id, registered_application_path(app.id) %> </td>
      </tr>
    <% end %>

</div>
